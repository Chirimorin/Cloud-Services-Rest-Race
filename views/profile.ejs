<!doctype html>
<html>
<% include ./shared/head %>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profiel</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">
        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Gebruikers gegevens</h3>
                <p>
                    <strong>id</strong>: <%= user._id %><br>
                    <strong>email</strong>: <%= user.logins.local.email %><br>
                    <strong>apikey</strong>: <%= user.authKey %><br>

                    <strong>nickname</strong>: <%= user.getDisplayName() %><br>

                </p>
            </div>
            <div class="well">
                <h3><span class="fa fa-user"></span> Nickname instellen</h3>
                <p>
                    <input type="text" id="nickname" class="form-control" name="nickname">
                    <button type="submit" id="updateNickname" class="btn btn-warning btn-lg">Nickname aanpassen</button>
                </p>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        var apiKey = "<%= user.authKey %>";
    </script>
    <script type="text/javascript" src="js/profile.js"></script>
</div>
</body>
</html>